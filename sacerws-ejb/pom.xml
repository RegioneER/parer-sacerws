        <dependency>
            <groupId>it.eng.parer</groupId>
            <artifactId>verificafirma-crypto-beans</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>sacerws-jpa</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>it.eng.parer</groupId>
                    <artifactId>spagofat-sl-jpa</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
